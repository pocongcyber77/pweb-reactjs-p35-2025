{
  "name": "it-literature-shop-backend",
  "version": "1.0.0",
  "description": "Backend for IT Literature Shop - HMIT ITS",
  "main": "src/server.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "test:db": "ts-node scripts/test-db-connection.ts",
    "test:crud": "ts-node scripts/test-crud-api.ts",
    "test:login": "ts-node scripts/test-login-admin-user.ts",
    "test:auth": "ts-node scripts/test-auth-middleware.ts",
    "test:favorites": "ts-node scripts/test-favorites-admin-user.ts",
    "test:admin-role": "ts-node scripts/test-admin-role-protection.ts",
    "test:all": "npm run test:db && npm run test:crud && npm run test:login && npm run test:auth && npm run test:favorites && npm run test:admin-role"
  },
  "keywords": [
    "express",
    "typescript",
    "prisma",
    "postgresql",
    "jwt"
  ],
  "author": "HMIT ITS",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
